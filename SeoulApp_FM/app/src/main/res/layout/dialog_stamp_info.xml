<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_stamp_info_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:src="@drawable/btn_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_stamp_info_text_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="장소명"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialog_stamp_info_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="50dp"
            android:src="@drawable/stamp_yes_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="획득 날짜"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/dialog_stamp_info_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="2016-01-01"
            android:textSize="15dp" />

    </LinearLayout>
</RelativeLayout>