<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.song.seoulapp_fm.StampActivity">

    <TextView
        android:id="@+id/stamp_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="스탬프 현황"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stamp_text"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stamp_image_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

            <ImageView
                android:id="@+id/stamp_image_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

            <ImageView
                android:id="@+id/stamp_image_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stamp_image_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

            <ImageView
                android:id="@+id/stamp_image_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

            <ImageView
                android:id="@+id/stamp_image_11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stamp_image_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

            <ImageView
                android:id="@+id/stamp_image_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

            <ImageView
                android:id="@+id/stamp_image_12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stamp_image_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

            <ImageView
                android:id="@+id/stamp_image_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />

            <ImageView
                android:id="@+id/stamp_image_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStampListener"
                android:padding="10dp"
                android:src="@drawable/stamp_lock" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>