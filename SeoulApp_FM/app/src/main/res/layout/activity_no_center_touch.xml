<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5522b8cf"
    tools:context=".Game.NoCenterTouchActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:background="@drawable/intro_logo" />

    <ImageView
        android:id="@+id/no_center_touch_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:onClick="onNoCenterTouchBtnListner"
        android:src="@drawable/stamp_1" />

    <ImageView
        android:id="@+id/no_center_touch_image_target"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/target" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:singleLine="true"
        android:text="@string/no_center_guide_text" />
</RelativeLayout>
